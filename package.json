{
  "name": "stlcpp",
  "displayName": "STLC++",
  "description": "Tree-sitter based syntax highlighting for the STLC++ language",
  "version": "0.0.2",
  "publisher": "stlcpp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aalto-opencs/vscode-stlcpp"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:stlcpp"
  ],
  "contributes": {
    "languages": [
      {
        "id": "stlcpp",
        "aliases": [
          "STLC++",
          "stlcpp"
        ],
        "extensions": [
          ".stlc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "boolean",
        "description": "Boolean literals"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "stlcpp",
        "scopes": {
          "boolean": ["constant.language.boolean"]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "web-tree-sitter": "^0.24.0"
  }
}
