{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "STLC++",
  "scopeName": "source.stlcpp",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#builtins" },
    { "include": "#booleans" },
    { "include": "#strings" },
    { "include": "#chars" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#identifiers" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.double-slash.stlcpp",
      "match": "//.*$"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.stlcpp",
          "match": "\\b(if|then|else|case|lcase|of|let|in)\\b"
        },
        {
          "name": "keyword.other.stlcpp",
          "match": "\\b(import|fun|forall|Type)\\b"
        },
        {
          "name": "keyword.other.fixity.stlcpp",
          "match": "\\b(infixl|infixr|prefix)\\b"
        },
        {
          "name": "keyword.other.constructor.stlcpp",
          "match": "\\b(nil|cons|inl|inr)\\b"
        },
        {
          "name": "keyword.other.projection.stlcpp",
          "match": "\\b(fst|snd)\\b"
        },
        {
          "name": "keyword.other.fix.stlcpp",
          "match": "\\b(fix)\\b"
        },
        {
          "name": "keyword.other.debug.stlcpp",
          "match": "\\b(panic|trace)\\b"
        }
      ]
    },
    "builtins": {
      "name": "support.function.builtin.stlcpp",
      "match": "\\b(__print|__pure|__bind|__readline)\\b"
    },
    "booleans": {
      "name": "constant.language.boolean.stlcpp",
      "match": "\\b(true|false)\\b"
    },
    "strings": {
      "name": "string.quoted.double.stlcpp",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.stlcpp",
          "match": "\\\\(?:[nrtbf\\\\\"'/]|u\\{[0-9a-fA-F]{1,6}\\})"
        }
      ]
    },
    "chars": {
      "name": "string.quoted.single.stlcpp",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.stlcpp",
          "match": "\\\\(?:[nrtbf\\\\\"'/]|u\\{[0-9a-fA-F]{1,6}\\})"
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.integer.stlcpp",
      "match": "\\b[0-9]+\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.stlcpp",
          "match": "->"
        },
        {
          "name": "keyword.operator.fat-arrow.stlcpp",
          "match": "=>"
        },
        {
          "name": "keyword.operator.comparison.stlcpp",
          "match": "=="
        },
        {
          "name": "keyword.operator.assignment.stlcpp",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.stlcpp",
          "match": "\\+|-|\\*|/"
        },
        {
          "name": "keyword.operator.custom.stlcpp",
          "match": "[<>|&!@#$%^~?`]+"
        },
        {
          "name": "keyword.operator.composition.stlcpp",
          "match": "(?<=\\s)\\.(?=\\s)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.stlcpp",
          "match": "\\b[A-Z][A-Za-z0-9]*\\b"
        },
        {
          "name": "variable.language.hole.stlcpp",
          "match": "\\b_\\b"
        }
      ]
    },
    "identifiers": {
      "name": "variable.other.stlcpp",
      "match": "\\b[a-z][A-Za-z0-9._']*\\b"
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.stlcpp",
          "match": ","
        },
        {
          "name": "punctuation.separator.colon.stlcpp",
          "match": ":"
        },
        {
          "name": "punctuation.separator.bar.stlcpp",
          "match": "\\|"
        },
        {
          "name": "punctuation.bracket.round.stlcpp",
          "match": "[()]"
        },
        {
          "name": "punctuation.bracket.square.stlcpp",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.bracket.curly.stlcpp",
          "match": "[{}]"
        }
      ]
    }
  }
}
